Categories
<table border="1">
<tr>
  <th>Categories</th>
  <th>Tasks count</th>
  <th>User Name</th>
</tr>
  <% @categories.each do |category| %>
    <tr id="category_<%= category.id%>">
      <th><%= link_to category.name, category_path(category)%></th>
      <th><%= category.tasks.size %></th>
      <th><%= category.user.login %></th>
      <th><%= link_to "Update", edit_category_path(category) %></th>
      <th><%= link_to "Delete", category_path(category), :method => :delete, :confirm => true %></th>
    </tr>
  <%end%>
</table>
